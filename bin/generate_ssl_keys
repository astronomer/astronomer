#!/bin/bash
# https://github.com/FiloSottile/mkcert
mkcert -install
mkcert app.local.astronomer-development.com "*.local.astronomer-development.com"
cat app.local.astronomer-development.com.pem > /tmp/fullchain.pem
cat "$(mkcert -CAROOT)/rootCA.pem" >> /tmp/fullchain.pem
mv app.local.astronomer-development.com-key.pem /tmp/privkey.pem
